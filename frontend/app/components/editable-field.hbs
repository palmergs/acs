<label class="text-sm pb-0 mb-0">{{ @label }}</label>
<div class="text-2xl p-2 mb-2 border rounded-md border-solid border-blue-200" >
  {{#if isEditing}}
    <div>
      {{#if @newlines }}
        <input type="text" class="block w-full text-gray-800" value={{ @value }}/>
      {{else}}
        <textarea class="block w-full text-gray-800">{{ @value }}</textarea>
      {{/if}}
    </div>
  {{else}}
    <div onclick={{action startEditing}}>
      {{ @value }}
    </div>
  {{/if}}
</div>

