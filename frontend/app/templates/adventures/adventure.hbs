<div class="flex">
  <div class="w-1/3 px-2">
    <h3 class="text-2xl pb-2">Edit Adventure</h3>
    <ul>
      <li>
        <LinkTo @route="adventures.adventure.maps"
                @model={{ @model }}
                class="text-xl">Maps</LinkTo>
      </li>
      <li>
        <LinkTo @route="adventures.adventure.regions"
                @model={{ @model }}
                class="text-xl">Regions</LinkTo>
      </li>
      <li>
        <LinkTo @route="adventures.adventure.creatures"
                @model={{ @model }}
                class="text-xl">Creatures</LinkTo>
      </li>
    </ul>
    
    <hr class="py-2 my-2"/>

    <LinkTo @route="adventures.adventure.creatures.new"
            @model={{ @model }}
            class="px-4 py-2 no-underline rounded bg-purple-600 shadow-md hover:shadow-lg hover:text-white hover:bg-purple-500 focus:outline-none">
      Add Creature
    </LinkTo>
  </div>
  <div class="w-2/3 px-2">
    {{outlet}}
  </div>
</div>
