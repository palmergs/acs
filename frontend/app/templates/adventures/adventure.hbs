<label class="text-sm pb-0 mb-0">Title</label>
<EditableField @value={{ this.adventure.name }}
               @onUpdate={{ fn this.updateValue 'name' }}/>

<label class="text-sm pb-0 mb-0">Description</label>
<EditableArea @value={{ this.adventure.descr }}
              @onUpdate={{ fn this.updateValue 'descr' }}/>

<label class="text-sm pb-0 mb-0">Introduction</label>
<EditableArea @value={{ this.adventure.intro }}
              @onUpdate={{ fn this.updateValue 'intro' }}/>

<label class="text-sm pb-0 mb-0">Rating</label>
<EditableSelect @value={{ this.adventure.rating }}
                @options={{ array 'kids' 'general' 'serious' }}
                @onUpdate={{ fn this.updateValue 'rating' }}/>

<label class="text-sm pb-0 mb-0">Genre</label>
<EditableSelect @value={{ this.adventure.genre }}
                @options={{ array 'fantasy' 'spy' 'scifi' }}
                @onUpdate={{ fn this.updateValue 'genre' }}/>

<label class="text-sm pb-0 mb-0">Access</label>
<EditableSelect @value={{ this.adventure.access }}
                @options={{ array 'public' 'private' }}
                @onUpdate={{ fn this.updateValue 'access' }}/>
