<div class="flex">
  <div class="w-1/3 px-2">
    <h3 class="text-2xl pb-2">Edit Adventure</h3>
    <ul>
      <li>
        <LinkTo @route="adventures.adventure.maps"
                @model={{ @model }}
                class="text-xl">Maps</LinkTo>
      </li>
      <li>
        <LinkTo @route="adventures.adventure.regions"
                @model={{ @model }}
                class="text-xl">Regions</LinkTo>
      </li>
      <li>
        <LinkTo @route="adventures.adventure.creatures"
                @model={{ @model }}
                class="text-xl">Creatures</LinkTo>
      </li>
      <li>
        <LinkTo @route="adventures.adventure.things"
                @model={{ @model }}
                class="text-xl">Things</LinkTo>
      </li>
    </ul>
    
    <hr class="py-2 my-2"/>

  </div>
  <div class="w-2/3 px-2">
    <label class="text-sm pb-0 mb-0">Title</label>
    <EditableField @value={{ @model.name }}
                   @onUpdate={{ fn this.updateValue 'name' }}/>

    <label class="text-sm pb-0 mb-0">Description</label>
    <EditableArea @value={{ @model.descr }}
                  @onUpdate={{ fn this.updateValue 'descr' }}/>

    <label class="text-sm pb-0 mb-0">Introduction</label>
    <EditableArea @value={{ @model.intro }}
                  @onUpdate={{ fn this.updateValue 'intro' }}/>

    <label class="text-sm pb-0 mb-0">Rating</label>
    <EditableSelect @value={{ @model.rating }}
                    @options={{ array 'kids' 'general' 'serious' }}
                    @onUpdate={{ fn this.updateValue 'rating' }}/>

    <label class="text-sm pb-0 mb-0">Genre</label>
    <EditableSelect @value={{ @model.genre }}
                    @options={{ array 'fantasy' 'spy' 'scifi' }}
                    @onUpdate={{ fn this.updateValue 'genre' }}/>

    <label class="text-sm pb-0 mb-0">Access</label>
    <EditableSelect @value={{ @model.access }}
                    @options={{ array 'public' 'private' }}
                    @onUpdate={{ fn this.updateValue 'access' }}/>
  </div>
</div>
