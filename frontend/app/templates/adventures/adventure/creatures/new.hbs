<label class="text-sm pb-0 mb-0">Name</label>
<EditableField @value={{ this.creature.name }}
               @onUpdate={{ fn this.updateValue 'name' }}/>

<label class="text-sm pb-0 mb-0">Description</label>
<EditableArea @value={{ this.creature.descr }}
              @onUpdate={{ fn this.updateValue 'descr' }}/>

<div class="flex">
  <div class="w-1/2 mr-1">
    <label class="text-sm pb-0 mb-0">Life</label>
    <EditableField @value={{ this.creature.life }}
                   @onUpdate={{ fn this.updateValue 'life' }}/>
  </div>

  <div class="w-1/2 pl-2">
    <label class="text-sm pb-0 mb-0">Power</label>
    <EditableField @value={{ this.creature.power }}
                   @onUpdate={{ fn this.updateValue 'power' }}/>
  </div>
</div>

<div class="flex">
  <div class="w-1/2 mr-1">
    <label class="text-sm pb-0 mb-0">Speed</label>
    <EditableField @value={{ this.creature.speed }}
                   @onUpdate={{ fn this.updateValue 'speed' }}/>
  </div>

  <div class="w-1/2 pl-2">
    <label class="text-sm pb-0 mb-0">Size</label>
    <EditableField @value={{ this.creature.size }}
                   @onUpdate={{ fn this.updateValue 'size' }}/>
  </div>
</div>

<div class="flex">
  <div class="w-1/2 mr-1">
    <label class="text-sm pb-0 mb-0">Constitution</label>
    <EditableField @value={{ this.creature.constitution }}
                   @onUpdate={{ fn this.updateValue 'constitution' }}/>

    <label class="text-sm pb-0 mb-0">Wisdom</label>
    <EditableField @value={{ this.creature.wisdom }}
                   @onUpdate={{ fn this.updateValue 'wisdom' }}/>
  </div>
  <div class="w-1/2 pl-1">
    <label class="text-sm pb-0 mb-0">Strength</label>
    <EditableField @value={{ this.creature.strength }}
                   @onUpdate={{ fn this.updateValue 'strength' }}/>

    <label class="text-sm pb-0 mb-0">Dexterity</label>
    <EditableField @value={{ this.creature.dexterity }}
                   @onUpdate={{ fn this.updateValue 'dexterity' }}/>
  </div>
</div>

<div class="flex">
  <div class="w-1/2 mr-1">
    <label class="text-sm pb-0 mb-0">Missile Skill</label>
    <EditableField @value={{ this.creature.missileSkill }}
                   @onUpdate={{ fn this.updateValue 'missileSkill' }}/>

    <label class="text-sm pb-0 mb-0">Melee Skill</label>
    <EditableField @value={{ this.creature.meleeSkill }}
                   @onUpdate={{ fn this.updateValue 'meleeSkill' }}/>
  </div>
  <div class="w-1/2 pl-1">
    <label class="text-sm pb-0 mb-0">Dodge Skill</label>
    <EditableField @value={{ this.creature.dodgeSkill }}
                   @onUpdate={{ fn this.updateValue 'dodgeSkill' }}/>

    <label class="text-sm pb-0 mb-0">Armor Skill</label>
    <EditableField @value={{ this.creature.armorSkill }}
                   @onUpdate={{ fn this.updateValue 'armorSkill' }}/>
  </div>
</div>

<label class="text-sm pb-0 mb-0">Magical Defense</label>
<EditableSelect @value={{ this.creature.magicalDefense }}
                @options={{ array 'none' 'partial' 'full' }}
                @onUpdate={{ fn this.updateValue 'magicalDefense' }}/>

<label class="text-sm pb-0 mb-0">Personality</label>
<EditableSelect @value={{ @model.personality }}
                @options={{ array 'Brave' 'Cautious' }}
                @onUpdate={{ fn this.updateValue 'personality' }}/>

<label class="text-sm pb-0 mb-0">Outlook</label>
<EditableSelect @value={{ @model.outlook }}
                @options={{ array 'Aggressive' 'Peaceful' }}
                @onUpdate={{ fn this.updateValue 'outlook' }}/>

<label class="text-sm pb-0 mb-0">Alliance</label>
<EditableSelect @value={{ @model.alliance }}
                @options={{ array 'Enemy' 'Friendly' 'Neutral' 'Thief' }}
                @onUpdate={{ fn this.updateValue 'alliance' }}/>

<div class="flex mt-2">
  <button type="button"
          class="px-4 py-2 rounded bg-purple-600 shadow-md hover:shadow-lg hover:text-white hover:bg-purple-500 focus:outline-none"
          {{ on "click" this.save }} >
    Create
  </button>

  <button type="button"
          class="ml-2 px-4 p-2 rounded bg-white border border-bg-purple-600 shadow-md text-purple-600 hover:shadow-lg"
          {{ on "click" this.cancel }} >
    Cancel
  </button>
</div>
