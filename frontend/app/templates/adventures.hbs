<div class="flex">
  <div class="w-1/3 px-2">
    <h3 class="text-2xl pb-2">Adventures</h3>
    <ul>
    {{#each @model as |adventure|}}
      <li class="leading-loose">
        <LinkTo @route="adventures.adventure"
                @model={{adventure}}
                class="text-xl">{{ adventure.name }}</LinkTo>
      </li>
    {{/each}}
    </ul>
    <div class="flex mt-2">
      <LinkTo @route="adventures.new" class="px-4 py-2 rounded bg-purple-600 shadow-md hover:shadow-lg hover:text-white hover:bg-purple-500 focus:outline-none">
        Add Adventure
      </LinkTo>
    </div>
  </div>
  <div class="w-2/3 px-2">
    {{outlet}}
  </div>
</div>
