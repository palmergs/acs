<div class="row">
  <div class="col-sm-12">
    <h4>Adventure</h4>
  </div>
</div>
<div class="row form-group">
  <div class="col-sm-3">
    <h5 class="text-right">Name</h5>
  </div>
  <div class="col-sm-9">
    {{input value=model.name classNames="form-control"}}
  </div>
</div>
<div class="row form-group">
  <div class="col-sm-3">
    <h5 class="text-right">Description</h5>
  </div>
  <div class="col-sm-9">
    {{textarea value=model.description classNames="form-control"}}
  </div>
</div>
<div class="row form-group">
  <div class="col-sm-3">
    <h5 class="text-right">Introduction</h5>
  </div>
  <div class="col-sm-9">
    {{textarea value=model.intro classNames="form-control"}}
  </div>
</div>
<div class="row form-group">
  <div class="col-sm-9 col-sm-offset-3">
    <button {{action 'save'}} class="btn btn-primary">Save</button>
    <a {{action 'cancel'}}>Cancel</a>
  </div>
</div>
{{yield}}
